{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},

	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "single"
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},

	"organizeImports": {
		"enabled": true
	}
}
